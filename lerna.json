{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.txt"],
      "conventionalCommits": true,
      "exact": true
    },
    "version": {
      "allowBranch": ["master", "develop"]
    }
  },
  "changelog": {
    "repo": "milotar",
    "labels": {
      "feat": ":rocket: New Features",
      "refactor": ":boom: Breaking Changes",
      "fix": ":bug: Bug Fix",
      "docs": ":memo: Documentation",
      "chore": ":hammer: Underlying Tools"
    },
    "cacheDir": ".changelog"
  },
  "publishConfig": {
    "access": "public"
  }
}
