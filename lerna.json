{
    "packages": [
      "packages/*"
    ],
    "version": "independent",
    "command": {
      "publish": {
        "ignoreChanges": [
          "*.md",
          "*.txt"
        ]
      },
      "version": {
         "allowBranch": ["master","develop"],
         "conventionalCommits": true,
         "changelogPreset": "griffin"
      }
    },
    "changelog": {
      "repo": "milotar/griffin",
      "labels": {
        "feat": ":rocket: New Features",
        "refactor": ":boom: Breaking Changes",
        "fix": ":bug: Bug Fix",
        "docs": ":memo: Documentation",
        "chore": ":hammer: Underlying Tools"
      },
      "cacheDir": ".changelog"
    }
  }
  